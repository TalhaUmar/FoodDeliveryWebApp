@model FoodDelivery.WebApp.Models.Order
@using FoodDelivery.WebApp.Models

@{
    Layout = null;
    int oid = Convert.ToInt32(ViewBag.orderId);
}


@foreach (CustomerOrderViewModel covm in ViewBag.OrderDetailsList)
{
    <div class="row" style="background-color:#FEF1DF; padding:10px; margin:5px">
        <div class="col-sm-12">
            <span style="font-weight:bold; font-size:17px">Food Item : </span><span style="font-size:17px">@covm.fooditem.Name</span>
        </div>


        <div class="col-sm-12">
            <span style="font-weight:bold; font-size:17px">Price : </span><span style="font-size:17px">@covm.fooditem.Price</span>
        </div>


        <div class="col-sm-12">
            <span style="font-weight:bold; font-size:17px">Quantity : </span><span style="font-size:17px">@covm.orderdetails.Quantity</span>
        </div>
    </div>
}

<div class="row" style="background-color:#FEF1DF; padding:10px; margin:5px">
    <div class="col-sm-12">
        <form role="form" method="post" action="@Url.Action("SetCookTime","RestaurantManager")">
            <div class="form-group">
                <span style="font-weight:bold; font-size:17px"><label for="ctime">Select Cook Time</label></span>
                <select name="CookTime" class="form-control" style="width:300px;">
                    <option>10 mins</option>
                    <option>15 mins</option>
                    <option>20 mins</option>
                    <option>25 mins</option>
                    <option>30 mins</option>
                    <option>35 mins</option>
                    <option>40 mins</option>
                    <option>45 mins</option>
                    <option>50 mins</option>
                    <option>55 mins</option>
                    <option>60 mins</option>
                </select>
            </div>
            <input type="hidden" id="residtxt" name="Id" value="@oid" />
            <button type="submit" id="btncooktime" class="btn btn-custom1 btn-block"><span class="glyphicon glyphicon-off"></span> Submit</button>
        </form>
    </div>
</div>
