    @* Login Scripts *@

    <script>
    $(document).ready(function () {
        $('#mytable1').dataTable();
    });


    function popuplogin() {
        $('#loginmodal').modal('show');

        jQuery.validator.unobtrusive.parse("#validateloginform");
    }

    function popuporderDetailModal() {
        $('#orderDetailModal').modal('show');
    }

    $(function () {
        $('#btnlogin').click(function (e) {
            e.preventDefault();
            var TController = '@ViewContext.RouteData.Values["controller"].ToString()';
            var TAction = '@ViewContext.RouteData.Values["action"].ToString()';
            var Qstring = '@ViewContext.HttpContext.Request.QueryString';
            $.ajax({
                type: "POST",
                url: '/home/login',
                data: {
                    "Phone": $('#phonetxt').val(),
                    "Password": $('#passwordtxt').val(),
                    "Rememberme": $('input:checkbox:checked').val(),
                    "ControllerName": TController,
                    "ActionName": TAction,
                    "QueryString": Qstring,
                },

                datatype: "json",
                success: function (result) {
                    if (result.link != null) {
                        window.location.href = result.link;
                    }
                    else {
                        $('#error-message').html(result.message);
                    }

                }

            });
        });
    });

        $(function () {
            $("#txtSearch").autocomplete({
                source: '@Url.Action("SearchRestaurant", "Home")'
            });
        });

</script>


