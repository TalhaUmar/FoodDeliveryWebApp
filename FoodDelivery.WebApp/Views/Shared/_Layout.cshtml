                </div>



            }
            else
            {
                <button id="log" type="button" class="btn btn-custom1" style="float:right;" data-target="#loginmodal" data-toggle="modal">Login</button>
                <button id="log" type="button" class="btn btn-custom1" style="float:right; margin-right:7px;" data-target="#signupmodal" data-toggle="modal">Signup</button>


            }

            @* Login Modal *@
            <div class="modal fade" id="loginmodal" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
