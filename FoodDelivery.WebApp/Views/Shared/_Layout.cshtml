                            <div class="row">
                                <div class="col-md-12">
                                    <p id="error-message"></p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-body" id="loginform">
                            @* Signup form will render here *@

                            @Html.Partial("~/Views/Shared/_SignupPartialView.cshtml")

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-custom1 pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            <p>Already a member? <button class="btn btn-custom1" data-toggle="modal" data-target="#loginmodal" data-dismiss="modal">Login</button></p>
                            
                        </div>
                    </div>
                </div>
            </div>

            @* Signup Modal *@
