                            <button class="close" type="button" data-dismiss="modal">&times;</button>
                            <h2><span class="glyphicon glyphicon-lock"></span>Login</h2>
                            <div class="row">
                                <div class="col-md-12">
                                    <p id="error-message"></p>
                                </div>
                            </div>
                        </div>
                        <div class="modal-body" id="loginform">
                            @* Login form will render here *@

                            @Html.Partial("~/Views/Shared/_LoginPartialView.cshtml")

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-custom1 pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
                            <p>Not a member? <button class="btn btn-custom1" data-toggle="modal" data-target="#signupmodal" data-dismiss="modal">Sign Up</button></p>
                            <p><button class="btn btn-custom1 btn-sm" data-toggle="modal" data-target="#forgotpasswordmodal" data-dismiss="modal">Forgot Password ?</button></p>
                            <p>Forgot <a href="#">Password?</a></p>
                        </div>
                    </div>
                </div>
            </div>

            @* Signup Modal *@
            <div class="modal fade" id="signupmodal" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header" style=" background-color:#BF2413; text-align:center; color:#ffffff">
