@model FoodDelivery.WebApp.Models.LoginModel

<form role="form" id="validateloginform">

    <div class="form-group">
        <label for="phone"><span class="glyphicon glyphicon-user"></span> Phone#</label>
        @Html.TextBoxFor(m => m.Phone, new { id = "phonetxt", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Phone, null, new { style = "color:red" })
    </div>
    <div class="form-group">
        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
        @Html.PasswordFor(m => m.Password, new { id = "passwordtxt", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, null, new { style = "color:red" })
    </div>
    <div class="checkbox">
        <label><span>@Html.CheckBoxFor(m => m.Rememberme, new { id = "Rememberme" })</span>Remember me</label>
    </div>

    <button type="submit" id="btnlogin" class="btn btn-custom1 btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
</form>