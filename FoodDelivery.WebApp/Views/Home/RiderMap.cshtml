@model FoodDelivery.WebApp.Models.Rider

@{
    Layout = null;
    int riderid = ViewBag.RiderID;
}

<input type="hidden" id="riderid" value="@riderid" />
<input type="text" id="latd" />
<input type="text" id="lng" />
<script>
    var map;
    var mapshowonce = true;

    $(document).ready(function () {
        getlatlon();
        $("#latd").hide();
        $("#lng").hide();
    });

    //function getLocation()
    //{
    //    getlatlon();
    //}

    function ajaxdelay() {
        setInterval(getlatlon, 30000);
    }

    function getlatlon() {
        $.get('/RiderLocation/GetCords', { "RiderID": $('#riderid').val() }, function (data) {
            $("#latd").val(data.lat);
            $("#lng").val(data.lon);
            var lat = data.lat;
            var lon = data.lon;
            displaymap(lat, lon);
            ajaxdelay();
        });
    }

    function displaymap(lat, lon) {
        var LatLng = new google.maps.LatLng(lat, lon);
        var mapOptions = {
            center: LatLng,
            zoom: 16,
            panControl: true,
            zoomControl: true,
            scaleControl: true,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            mapTypeControl: true,
            mapTypeControlOptions: { style: google.maps.MapTypeControlStyle.DEFAULT },
            navigationControl: true,
            navigationControlOptions: { style: google.maps.NavigationControlStyle.DEFAULT }
        };
        if (mapshowonce == true) {
            map = new google.maps.Map(document.getElementById("dvMap"), mapOptions);
            mapshowonce = false;
        }

        var marker = new google.maps.Marker({
            position: LatLng,
            map: map,
            icon: '../images/ridermarker.png',
            //title: "<div style = 'height:60px;width:200px'><b>Your location:</b><br />Latitude: " + p.coords.latitude + "<br />Longitude: " + p.coords.longitude
        });
    }

</script>
