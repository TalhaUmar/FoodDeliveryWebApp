        $(function () {
            $('#btnlogin').click(function (e) {
                e.preventDefault();
                var TController = '@ViewContext.RouteData.Values["controller"].ToString()';
                var TAction = '@ViewContext.RouteData.Values["action"].ToString()';
                $.ajax({
                    type: "POST",
                    url: '/home/login',
                    data: {
                        "Phone": $('#phonetxt').val(),
                        "Password": $('#passwordtxt').val(),
                        "Rememberme": $('input:checkbox:checked').val(),
                        "ControllerName": TController,
                        "ActionName": TAction,
                    },

                    datatype: "json",
                    success: function (result) {
                        if (result.link != null) {
                            window.location.href = result.link;
                        }
                        else {
                            $('#error-message').html(result.message);
                        }

                    }

                });
            });
        });

    </script>


