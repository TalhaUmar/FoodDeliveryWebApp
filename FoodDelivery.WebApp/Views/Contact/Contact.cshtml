@model FoodDelivery.WebApp.Models.Message
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" style="background-image:url(../../images/slide888.jpg); background-size:cover; background-repeat:no-repeat; min-height:900px;">
    <div class="container" style="margin-top:100px">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-12"><div><span class="contactUs">CONTACT US</span></div></div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <form role="form" method="post" action="@Url.Action("insertMessage", "Contact")" enctype="multipart/form-data">
                            @Html.ValidationSummary(true)
                            <div class="form-group">

                                @Html.LabelFor(m => m.Name, "Name", new { @class = "contactLbl" })

                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter name" })
                                @Html.ValidationMessageFor(m => m.Name, null, new { style = "color:red" })
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Subject, "Subject", new { @class = "contactLbl" })

                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Enter Subject" })
                                @Html.ValidationMessageFor(m => m.Subject, null, new { style = "color:red" })
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Description, "Description", new { @class = "contactLbl" })
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Description", rows = "10" })
                                @Html.ValidationMessageFor(m => m.Description, null, new { style = "color:red" })
                            </div>

                            <button type="submit" class="btn btn-custom1 btn-block"><span class="glyphicon glyphicon-off"></span> Submit</button>
                        </form>
                    </div>
                </div>

            </div>
            <div class="col-sm-2"></div>
        </div>
    </div>
</div>