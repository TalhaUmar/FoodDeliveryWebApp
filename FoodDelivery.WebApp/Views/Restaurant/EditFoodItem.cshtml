@model FoodDelivery.WebApp.Models.FoodItem
@using FoodDelivery.WebApp.Models
@{
    Layout = null;
    int id = ViewBag.ResId;
    
}


<form role="form" id="validationform" method="post" action="@Url.Action("UpdateFoodItem", "Restaurant", new {rid = id})">
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Item Name" })
        @Html.ValidationMessageFor(m => m.Name, null, new { style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, "Price")
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter Price" })
        @Html.ValidationMessageFor(m => m.Discount, null, new { style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Discount, "Discount")
        @Html.TextBoxFor(m => m.Discount, new { @class = "form-control", placeholder = "Enter Discount" })
        @Html.ValidationMessageFor(m => m.Discount, null, new { style = "color:red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, "Description")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Enter Description" })
        @Html.ValidationMessageFor(m => m.Description, null, new { style = "color:red" })
    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-custom1 btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Submit</button>
</form>
